<div class="container my-4 my-md-5"> 
  <h2 class="text-center mb-4 fw-bold">みんなのランチ</h2>

  <%= form_with url: posts_path, method: :get, local: true, class: "mb-5" do |f| %>
    <div class="row g-2 justify-content-center shadow-sm p-3 bg-light rounded">
      
      <div class="col-12 col-md-4">
        <%= f.text_field :query, value: params[:query], placeholder: "料理名でキーワード検索...", class: "form-control" %>
      </div>
  
      <div class="col-6 col-md-3">
        <%= f.collection_select :dish_id, Dish.all, :id, :name, { prompt: "料理名を選択", selected: params[:dish_id] }, { class: "form-select" } %>
      </div>
  
      <div class="col-6 col-md-3">
        <%= f.select :cuisine, Dish.pluck(:cuisine).uniq, { prompt: "ジャンルを選択", selected: params[:cuisine] }, { class: "form-select" } %>
      </div>
      
      <div class="col-12 col-md-2 d-flex gap-1">
        <%= f.submit "検索", class: "btn btn-primary flex-grow-1" %>
        <% if params[:query].present? || params[:dish_id].present? || params[:cuisine].present? %>
          <%= link_to "×", posts_path, class: "btn btn-outline-secondary" %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @posts.present? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 g-md-4">
      <% @posts.each do |post| %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0 rounded-3 overflow-hidden">
            
            <% if post.photo.attached? %>
              <%= image_tag post.photo.variant(:thumb), class: "card-img-top", style: "height: 200px; md-height: 250px; object-fit: cover;" %>
            <% else %>
              <div class="bg-light text-center py-5" style="height: 200px;">
                <p class="text-muted small">画像なし</p>
              </div>
            <% end %>

            <div class="card-body p-3">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <h5 class="card-title mb-0 fw-bold"><%= post.dish.name %></h5>
              </div>
              
              <div class="d-flex align-items-center mb-2">
                <p class="mb-0 text-primary small">
                  <strong><%= post.user.name || "名無しさん" %></strong>
                </p>
              </div>
              
              <p class="card-text text-muted" style="font-size: 0.75rem;">
                <i class="bi bi-clock"></i> <%= l post.created_at, format: :short %>

              <% if user_signed_in? && post.user == current_user %>
                <div class="mt-3 pt-2 border-top d-flex justify-content-end gap-2">
                  <%= link_to edit_post_path(post), class: "btn btn-sm btn-outline-secondary" do %>
                    編集
                  <% end %>
                  <%= link_to post_path(post), 
                              data: { turbo_method: :delete, turbo_confirm: "本当にこの投稿を削除しますか？" }, 
                              class: "btn btn-sm btn-outline-danger" do %>
                    削除
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center mt-5">
      <%= paginate @posts %>
    </div>

  <% else %>
    <div class="alert alert-info text-center shadow-sm">
      該当するランチの履歴がありません。
      <div class="mt-2">
        <%= link_to "一覧に戻る", posts_path, class: "btn btn-sm btn-info text-white" %>
      </div>
    </div>
  <% end %>
</div>