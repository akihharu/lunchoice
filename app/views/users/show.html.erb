<div class="container my-4 my-md-5">
  <div class="text-center mb-5">
    <h2 class="fw-bold">
      <%= @user.name || "ユーザー" %> さんのマイページ
      <% if @user == current_user %>
        <%= link_to edit_user_registration_path, class: "btn btn-sm btn-outline-secondary ms-2 align-middle" do %>
          <i class="bi bi-pencil"></i> プロフィールを編集
        <% end %>
      <% end %>
    </h2>
    
    <p class="text-muted">これまでのランチ投稿：<%= @user.posts.count %>件</p>
  </div>

  <% if @posts.present? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 g-md-4">
      <% @posts.each do |post| %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0 rounded-3 overflow-hidden">
            <% if post.photo.attached? %>
              <%= image_tag post.photo.variant(:thumb), class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
            <% else %>
              <div class="bg-light text-center py-5" style="height: 200px;">
                <p class="text-muted small">画像なし</p>
              </div>
            <% end %>

            <div class="card-body p-3">
              <h5 class="card-title mb-2 fw-bold"><%= post.dish.name %></h5>
              <p class="card-text text-muted small mb-3">
                <i class="bi bi-clock"></i> <%= l post.created_at, format: :short %>
              </p>

              <div class="pt-2 border-top d-flex justify-content-end gap-2">
                <%= link_to '編集', edit_post_path(post), class: 'btn btn-sm btn-outline-secondary' %>
                <%= link_to '削除', post_path(post), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: 'btn btn-sm btn-outline-danger' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center mt-5">
      <%= paginate @posts %>
    </div>
  <% else %>
    <div class="text-center py-5 shadow-sm bg-white rounded">
      <p class="text-muted">まだランチの投稿がありません。</p>
      <%= link_to "最初のランチを投稿する", new_post_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>