<% if resource.errors.any? %>
  <div id="error_explanation" data-turbo-cache="false">
    <h2 style="font-size: 1.1rem; line-height: 1.5;">
      <%= resource.errors.count %> 件のエラーにより<br>アカウントを登録できませんでした：
    </h2>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
